{
  "name": "deploy",
  "version": "1.0.0",
  "description": "Deploying scripts for chatbot APIs",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "cli:chroma:local": "npm run build && node lib/cli/chroma.js localhost:8080",
    "cli:chroma:dev": "npm run build && node lib/cli/chroma.js https://us-central1-chatbot-dev-406508.cloudfunctions.net/chroma",
    "cli:chroma:prod": "npm run build && node lib/cli/chroma.js https://us-central1-chatbot-32ff4.cloudfunctions.net/chroma",
    "config:local": "cp ./src/configs/local.ts ./src/configs/config.ts",
    "config:dev": "cp ./src/configs/dev.ts ./src/configs/config.ts",
    "config:prod": "cp ./src/configs/prod.ts ./src/configs/config.ts",
    "test:local": "npm run build && FUNCTION_URL='http://localhost:8080' ./node_modules/.bin/jest --verbose",
    "test:dev": "npm run build && FUNCTION_URL='https://us-central1-chatbot-dev-406508.cloudfunctions.net/chroma' ./node_modules/.bin/jest --verbose",
    "test:prod": "npm run build && FUNCTION_URL='https://us-central1-chatbot-32ff4.cloudfunctions.net/chroma' ./node_modules/.bin/jest --verbose",
    "build:chroma:local": "npm run build && cd ../chroma && npm run config:local && npm run build",
    "build:chroma:dev": "npm run build && cd ../chroma && npm run config:dev && npm run build",
    "build:chroma:prod": "npm run build && cd ../chroma && npm run config:prod && npm run build",
    "run-local-chromadb": "docker run -p 8000:8000 chromadb/chroma",
    "deploy:chroma:local": "npm run build:chroma:local && cd ../chroma && node lib/index.js",
    "deploy:chroma:dev": "npm run build:chroma:dev && node lib/deploy/chroma.js -p dev",
    "deploy:chroma:prod": "npm run build:chroma:prod && node lib/deploy/chroma.js -p prod"
  },
  "author": "Seungpyo Hong",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@google-cloud/functions": "^3.0.1",
    "@google-cloud/iam": "^1.0.1",
    "@google-cloud/iam-credentials": "^3.0.1",
    "@orca.ai/pulse": "^1.0.24",
    "google-auth-library": "^9.4.1"
  }
}
